{
  "compilerOptions": {
    "target": "ESNext",                                  
    "module": "commonjs",                               
    "baseUrl": "./",                                 
    "paths": {
      "@/*": ["./src/*"]
    },                  
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "resolveJsonModule": true,        
    "outDir": "build",                    
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules","src/tests","src/docs"]
}